$toolbarHeight = 50px

body
  background #eee

.canvas-container
  margin: 0 auto
  margin-top $toolbarHeight
  background: #fff

.export-overlay
	position: fixed
	left 50px
	display: none
	right 50px
	bottom 50px
	top 50px
	background: #fff
	z-index 5

	.content
		width 100%
		height 200px

.toolbar
	position fixed
	left 0
	right 0
	height $toolbarHeight
	top 0
	background #E5E5E5
	z-index 5

	.button
		height 50px
		line-height: 50px
		padding-left 15px
		cursor pointer
		float left

.noselect {
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -khtml-user-select: none;    /* Konqueror */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* Internet Explorer/Edge */
  user-select: none;           /* Non-prefixed version, currently
                                  not supported by any browser */
}
