// Modal Structure
#set_image_size.modal
  .modal-content
    h4 Set Image Size
    .row
      form.col.s12
        .row
          .input-field.col.s12
            input#image_size.validate(placeholder='0', type='number')
            label(for='image_size') Image Size
          

  .modal-footer
    a.modal-action.modal-close.waves-effect.waves-green.btn-flat.ok(href='#!') Ok
